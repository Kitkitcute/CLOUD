<span class="s0">&lt;script&gt;</span>
  <span class="s6">let </span><span class="s1">notes = [</span>
          <span class="s3">&quot;This is my first note.&quot;</span><span class="s1">,</span>
          <span class="s3">&quot;Remember to buy groceries!&quot;</span><span class="s1">,</span>
          <span class="s3">&quot;Finish coding project by Friday&quot;</span>
  <span class="s1">]</span>

  <span class="s1">document.getElementById(</span><span class="s3">'noteForm'</span><span class="s1">).addEventListener(</span><span class="s3">'submit'</span><span class="s1">, </span><span class="s6">function</span><span class="s1">(e){</span>
    <span class="s1">e.preventDefault();</span>
    <span class="s6">const </span><span class="s1">noteInput = document.getElementById(</span><span class="s3">'noteInput'</span><span class="s1">)</span>
    <span class="s6">const </span><span class="s1">newNote = noteInput.value</span>
    <span class="s6">if</span><span class="s1">(newNote !== </span><span class="s3">&quot;&quot;</span><span class="s1">){</span>
      <span class="s1">notes.push(newNote);</span>
      <span class="s1">noteInput.value = </span><span class="s3">&quot;&quot;</span><span class="s1">;</span>
      <span class="s1">displayNotes();</span>
    <span class="s1">}</span>
  <span class="s1">});</span>

  <span class="s6">function </span><span class="s1">displayNotes(){</span>
    <span class="s6">const </span><span class="s1">noteList = document.getElementById(</span><span class="s3">'noteList'</span><span class="s1">);</span>
    <span class="s1">noteList.innerHTML = </span><span class="s3">&quot;&quot;</span><span class="s1">;</span>
    <span class="s1">notes.forEach(</span><span class="s6">function</span><span class="s1">(note){</span>
      <span class="s6">const </span><span class="s1">noteItem = document.createElement(</span><span class="s3">'div'</span><span class="s1">);</span>
      <span class="s1">noteItem.classList.add(</span><span class="s3">'note'</span><span class="s1">);</span>
      <span class="s1">noteItem.textContent = note;</span>
      <span class="s1">noteList.appendChild(noteItem);</span>
    <span class="s1">});</span>
  <span class="s1">}</span>
<span class="s0">&lt;/script&gt;</span>
